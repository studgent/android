<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserProfileActivity" >    
    
    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Floris Devreese"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/user_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_name"
        android:layout_below="@+id/user_profile_name"
        android:text="florisdevreese@hotmail.com" />

    <TextView
        android:id="@+id/user_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_email"
        android:layout_below="@+id/user_profile_email"
        android:text="tel 03235363424" />
    
    <TextView
        android:id="@+id/user_profile_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_phone"
        android:layout_below="@+id/user_profile_phone"
        android:text="40 punten" />

    <Button
        android:id="@+id/button_trofie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_score"
        android:layout_below="@+id/user_profile_score"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:onClick="openTrofieListActivity"
        android:text="@string/trophie_button" />

    <Button
        android:id="@+id/button_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_phone"
        android:layout_below="@+id/button_trofie"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:onClick="openCheckinListActivity"
        android:text="@string/checkin_button" />
    
</RelativeLayout>
